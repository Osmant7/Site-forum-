{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

{% block stylesheets %}
<style>
    .gradient-custom {
            /* fallback for old browsers /
            background: #2929ae;

            / Chrome 10-25, Safari 5.1-6 /
            background: -webkit-linear-gradient(to right, rgba(41, 41, 174, 0.5), rgba(90, 30, 69, 0.5));

            / W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, rgba(41, 41, 174, 0.5), rgba(90, 30, 69, 0.5))
        }
    </style>
{% endblock %}
<div class="card m-3 gradient-custom" style="text-align:center;">
    <h2><span style="color:white;margin-right:15px;">Discussion :</span> {{ topic.title }}</h2>
</div>
{% if not app.user %}
<p style="margin-left:30px;">Veuillez vous connectez pour répondre à ce sujet</p>
{% else %}
<a href="{{ path('New_Post', {'id': topic.id }) }}" class="btn m-3">Répondre à ce sujet</a>
{% endif %}



{% for t in topic.posts %}
<div class="container m-3">
  <div class="row">
    <div class="col-6">
      <div class="card mt-3 tab-card">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
             <img src="{{ asset('upload/' ~ t.brochureFilename) }}" alt="" height="150px">
                <h5 class="mt-3">{{ t.content }}</h5>
                 <p class="text-muted">Ecrit le {{ t.createdAt | date('d/m/Y') }} à {{ t.createdAt | date('H:i') }} </p>
                <div>
                     <p>écrit par : {{ t.user.username }}</p>
                </div>
                 {% if app.user %}  
                 {% if not app.user.admin %}
                    {% else %}
                        {% if t.user.admin == 1 or t.user.admin == null %}
                            <a href="{{ path('delete_commentaire', {'id': t.id}) }}" class="secondbtn btn-danger"><i class="fas fa-trash"></i></a>
                    {% else %}
                {% endif %}
                {% endif %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endfor %}






<style>
body
{
    background: linear-gradient(to right, rgba(41, 41, 174, 0.5), rgba(90, 30, 69, 0.5))
}
.btn {
  display: inline-block;
  margin-top: 20px;
  padding: 8px 20px;
  background: #ed931c;
  border: 1px solid white;
  color: #fff;
  border-radius: 40px;
  font-weight: 500;
  letter-spacing: 1px;
  text-decoration: none;
}
.secondbtn{
  background:#871c1c;
  border: 1px solid white;
  border-radius: 40px;
  font-weight: 500;
  margin-top: 20px;
  padding: 8px 20px;
}
</style>
{% endblock %}